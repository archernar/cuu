# -----------------------------------------------------------------------------------------------------------------------
# -- COMMAND PROCESSOR: 
# -----------------------------------------------------------------------------------------------------------------------
bCmd=0
gCmd=0
szCmd=""
OA="-a"
OART="-a -r -t"
OAR="-a -r"
OAU="-a -u"
OAUT="-a -u -t"

touch ~/.cuu.txt
LASTCONFIG() {
    cat ~/.cuu.last | gawk -v I=$1 '
    /^$1[=]/ {next}
             {print $0}
    '  > ~/.cuu.local
    cp ~/.cuu.local ~/.cuu.last
    rm -rf  ~/.cuu.local
    print $1"="$2 >> ~/.cuu.last
}

rm -rf $CuuCommandFile  >/dev/null 2>&1
CUUABEND() { print "CUU Internal Error!"; print "     Duplicate Command: "$1; exit 1; }

typeset -A COMMANDSET
typeset -A COMMANDALIASES
CMDRAN=`tr -cd \#_[:alnum:] < /dev/urandom |  fold -w 18 | head -1 |gawk '{print $0 "##"}'`
COMMANDPROC() {
     bCmd=0
     THISCMD=`echo "$1" | gawk -F, '@include "trim.awk"; {print trim($1)}'`
     COMMANDALIASES["$THISCMD"]="$1"
     if [ "$THISCMD" == "" ] ; then return bCmd; fi
     if [ "${COMMANDSET[$THISCMD]}" == "$CMDRAN" ] ; then CUUABEND "$THISCMD"; else COMMANDSET[$THISCMD]="$CMDRAN"; fi
     print $THISCMD >> $CuuCommandFile
     INFO[$THISCMD]="$2"
     OPTO[$THISCMD]="$3"
     if [ "$COMMAND" == "$THISCMD" ] ; then bCmd=1; gCmd=1; szCmd="$COMMAND"; return bCmd; fi

     bCmd=0
     THISCMD=`echo "$1" | gawk -F, '@include "trim.awk"; {print trim($2)}'`
     if [ "$THISCMD" == "" ] ; then return bCmd; fi
     if [ "${COMMANDSET[$THISCMD]}" == "$CMDRAN" ] ; then CUUABEND "$THISCMD"; else COMMANDSET[$THISCMD]="$CMDRAN"; fi
     print $THISCMD"(alias)" >> $CuuCommandFile
     INFO[$THISCMD]="$2"
     OPTO[$THISCMD]="$3"
     if [ "$COMMAND" == "$THISCMD" ] ; then bCmd=1; gCmd=1; szCmd="$COMMAND"; return bCmd; fi

     bCmd=0
     THISCMD=`echo "$1" | gawk -F, '@include "trim.awk"; {print trim($3)}'`
     if [ "$THISCMD" == "" ] ; then return bCmd; fi
     if [ "${COMMANDSET[$THISCMD]}" == "$CMDRAN" ] ; then CUUABEND "$THISCMD"; else COMMANDSET[$THISCMD]="$CMDRAN"; fi
     print $THISCMD >> $CuuCommandFile
     INFO[$THISCMD]="$2"
     OPTO[$THISCMD]="$3"
     if [ "$COMMAND" == "$THISCMD" ] ; then bCmd=1; gCmd=1; szCmd="$COMMAND"; return bCmd; fi

     bCmd=0
     THISCMD=`echo "$1" | gawk -F, '@include "trim.awk"; {print trim($4)}'`
     if [ "$THISCMD" == "" ] ; then return bCmd; fi
     if [ "${COMMANDSET[$THISCMD]}" == "$CMDRAN" ] ; then CUUABEND "$THISCMD"; else COMMANDSET[$THISCMD]="$CMDRAN"; fi
     print $THISCMD >> $CuuCommandFile
     INFO[$THISCMD]="$2"
     OPTO[$THISCMD]="$3"
     if [ "$COMMAND" == "$THISCMD" ] ; then bCmd=1; gCmd=1; szCmd="$COMMAND"; return bCmd; fi

     return 0
}
COMMANDLIST() {
     rm $Tmp  >/dev/null 2>&1
     LIST=`cat $CuuCommandFile`
     for ITEM in $LIST; do
          SZOPTO="${OPTO[$ITEM]}"
          if [ "$SZOPTO" == "" ] ; then
               SZOPTO="-a"
          fi
          typeset -l v=$ITEM
          printf "     %-28s %-12s %s\n" $v "$SZOPTO" "${INFO[$ITEM]}" >> $Tmp
     done
     cp $Tmp fed
     cat $Tmp | sort
     NOTHING=0
     LIST=""
}
COMMANDINFO() {
    INFO[$szCmd]="$1"
    # print ${INFO[$szCmd]}
}

