COMMANDPROC "UTILPUBLISH,PUBLISH" "Publish cuureport.txt" "-a"; if [ $bCmd -gt 0 ] ; then
     assertfile cuureport.txt
     EPOCHTIME=`date --rfc-3339=seconds |gawk '{print $1 "." $2}'`
     DSTAMP=`date '+%F%H%M%S' | sed 's/-//g'`
     FNAME="cuureport"-$EPOCHTIME".txt"
     print $FNAME
     cat cuureport.txt > $FNAME
     aws --profile $ACCOUNT s3api put-object --bucket ecd3pub --key $FNAME --body $FNAME --content-encoding ISO-8559-6 --content-type text/plain > $Tmp
     aws --profile $ACCOUNT s3 ls s3://ecd3pub --recursive
     java Gpurl us-east-1 ecd3pub $FNAME 15
fi

