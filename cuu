#      THIS=" --filters "
#      for ITEM in $LIST; do
#           time $AWS ec2 describe-instances --filters Name=instance-id,Values=$ITEM  --query 'Reservations[*].Instances[*].Tags[?Key==`Name`].Value'
#            $AWS ec2 describe-tags --filters Name=resource-id,Values=$ITEM Name=key,Values=Name --query Tags[].Value
