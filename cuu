     aws --profile $ACCOUNT iam list-attached-user-policies --user-name $USERNAME | gawk -v A=$ACCOUNT -v U=$USERNAME ' {
          sz = "aws --profile " A " iam detach-user-policy --user-name " U " --policy-arn " $2
          system(sz)
     }'
fi
